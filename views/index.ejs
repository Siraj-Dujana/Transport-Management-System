<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transporter Setup</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css">
</head>

<body class="p-6 bg-gray-100 font-sans">

    <div class="absolute top-8 right-10">
  <a href="/admin/logout" class="px-5 py-2 bg-red-600 text-white font-semibold rounded hover:bg-red-700 transition">
    Logout
  </a>
</div>
    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg mt-10">
        <div class="p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">Transporter Setup</h2>
            <form id="transporterForm" action="/transporter" method="POST">
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Transporter Id</label>
                            <input type="text" required readonly
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="Transporter ID (Generated-Auto)" name="id" value="<%= id %>">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Transport Name</label>
                            <input type="text" required
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="Transport Name" name="transportName">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Transporter Name</label>
                            <input type="text" required
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="Transporter Name" name="transporterName">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Primary Cell No</label>
                            <input type="tel" id="primaryCellNo" maxlength="16" required
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="+92 XXX XXXXXXX" name="pCell">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Secondary Cell No</label>
                            <input type="tel" id="secondaryCellNo" maxlength="16" required
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="+92 XXX XXXXXXX" name="sCell">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                            <input type="text" required
                                class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                                placeholder="Address" name="address">
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                            <select required name="city"
                                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300">
                                <option value="">Select City</option>
                                <option value="Lahore">Lahore</option>
                                <option value="Karachi">Karachi</option>
                                <option value="Islamabad">Islamabad</option>
                            </select>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                            class="w-full md:w-auto px-8 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg">
                            Add
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <div class="max-w-6xl mx-auto my-6 bg-white rounded-xl shadow-lg p-8">
        <form action="/search" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div>
                    <input type="text" required
                        class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-gray-300"
                        placeholder="Transporter ID" name="id"> 

                </div>

                <div>
                    <button type="submit"
                        class="w-full md:w-auto px-8 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg">
                        Search
                    </button>
                </div>
                </form>
                    <form action="/transporter">
                        
                        <button type="submit"
                        class="w-full md:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg">
                        View Total Records
                    </button>
            </form>
                
            </div>

        <h2 class="text-3xl font-bold mb-4">Existing Transporters</h2>
        <h2 class="text-3xl font-bold mb-4"><%= title %>: <%= count %> Records</h2>
        <div class="overflow-x-auto mt-10 rounded-xl shadow-lg border border-gray-200">
            <table class="min-w-full divide-y divide-gray-200 text-sm text-gray-700">
                <thead class="bg-gray-100 text-gray-800 font-semibold uppercase tracking-wide">
                    <tr class="text-center">
                        <th class="px-6 py-3 ">ID</th>
                        <th class="px-6 py-3">Transport Name</th>
                        <th class="px-6 py-3">Transporter Name</th>
                        <th class="px-6 py-3">Primary</th>
                        <th class="px-6 py-3">Secondary</th>
                        <th class="px-6 py-3">Address</th>
                        <th class="px-6 py-3">City</th>
                        <th class="px-6 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 text-center bg-white">
                    <% for(let record of records) { %>
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4">
                                <%= record.id %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.transportName %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.transporterName %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.pCell %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.sCell %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.address %>
                            </td>
                            <td class="px-6 py-4">
                                <%= record.city %>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-center gap-3">
                                    <form action="/transporter/<%= record.id %>/edit" method="GET">
                                        <button type="submit"
                                            onclick="return confirm('Are you sure you want to update this record?');"
                                            class="inline-flex items-center gap-1 px-4 py-1.5 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">
                                            Edit
                                        </button>
                                    </form>
                                    <form action="/transporter/<%= record.id %>/delete?_method=DELETE" method="POST">
                                        <button type="submit"
                                            class="inline-flex items-center gap-1 px-4 py-1.5 bg-red-600 text-white rounded-md hover:bg-red-700 transition"
                                            onclick="return confirm('Are you sure you want to delete this record?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

    </div>


    <script>
        function autoFill92(id) {
            const input = document.getElementById(id);
            input.addEventListener('focus', () => {
                if (input.value.trim() === '') {
                    input.value = '+92 ';
                }
            });
        }

        autoFill92('primaryCellNo');
        autoFill92('secondaryCellNo');
    </script>


</body>

</html>